{
  "version": 2,
  "functions": {
    "api/bot.py": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/health",
      "dest": "/api/bot.py"
    },
    {
      "src": "/info", 
      "dest": "/api/bot.py"
    },
    {
      "src": "/setup-webhook",
      "dest": "/api/bot.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/bot.py"
    }
  ]
}
